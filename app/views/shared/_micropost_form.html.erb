<!--The form partial for creating menu item on the home.html.erb file-->
<div class="create-menu-item-display">
  <%= form_for(@micropost, html: { multipart: true }) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class="field menu-item-title create-form-item-effect">
      <%= f.text_field :content, placeholder: "Menu item title..."  %>
      <%# class: 'menu-item-title create-form-item-effect' %>
    </div>
    <div class="field category-select-form create-form-item-effect">
      <%= f.select(:category, options_for_select(@categories_select, :selected => f.object.category), {:prompt => "--Select Category--"}) %>
    </div>
    <div class="field menu-item-title create-form-item-effect">
      <%= f.text_field :price, placeholder: "Menu item price..." %>
    </div>
    <div class="field menu-item-description create-form-item-effect">
      <%= f.text_area :description, placeholder: "Menu item description..." %>
    </div>
    <span class="picture menu-item-file">
      <%= f.file_field :picture, class: 'file-element', id: 'file', accept: 'image/jpeg,image/gif,image/png' %>
      <label class='file-label' for="file">Choose a file</label>
    </span>
    <%= f.submit "Post", class: "menu-item-btn btn btn-primary", style: "margin-bottom: 30px;" %>
  <% end %>

  <!--Checking the file size with jQuery.-->
  <script type="text/javascript">
    $('#micropost_picture').bind('change', function() {
      var size_in_megabytes = this.files[0].size/1024/1024;
      if (size_in_megabytes > 5) {
        alert('Maximum file size is 5MB. Please choose a smaller file.');
      }
    });
  </script>
</div>
