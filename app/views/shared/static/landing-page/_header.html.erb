<!-- landing-header -->
<header class='landing-header' id="home">
    <div style="margin-bottom: 10px;" class="row">
      <% flash.each do |message_type, message| %>
        <div class="alert alert-<%= message_type %>"><%= message %></div>
      <% end %>
    </div>
    <h1><span>VISUAL</span> MENU</h1>
    <h3>Enhance your menu with visuals.</h3>
    <div class='v-btn-c'>
        <%= link_to "Try free for 14 days", signup_path, class: "v-btn v-btn-dark v-btn-important" %>
    </div>
    <div class='menu-example'>
        <div onclick="scrollHorizontal(-640)" class='scroll-btn left'></div>
        <p>Slide to see more menu items</p>
        <ul id='_menu_example'>
            <li><img src='/assets/landing/img_1.jpg' alt='sample' /></li>
            <li><img src='/assets/landing/img_6.jpg' alt='sample' /></li>
            <li><img src='/assets/landing/img_3.jpg' alt='sample' /></li>
            <li><img src='/assets/landing/img_2.jpg' alt='sample' /></li>
            <li><img src='/assets/landing/img_4.jpg' alt='sample' /></li>
            <li><img src='/assets/landing/img_5.jpg' alt='sample' /></li>

        </ul>
        <div onclick="scrollHorizontal(640)" class='scroll-btn right'></div>
    </div>
    <img class='phone-cut' src='/assets/phone-cut.svg' alt='phone-cut' />
</header>
<script type="text/javascript">
    function scrollHorizontal(amount) {
        document.getElementById('_menu_example')
        .scrollBy({
            top: 0,
            left: amount,
            behavior: 'smooth'
        })
    }
</script>
