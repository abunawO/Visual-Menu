<!--The partial for the user info sidebar on the home.html.erb file-->
<div class="user-header">
    <div class='uh-banner-c'>
      <div class='uh-banner-wrapper'>
      </div>
        <img id='user-image' src= <%= @user.picture %>>
    </div>
    <div class='uh-profile-c'>
        <div class='uh-profile-item'>
            <span class="material-icons positive-icon">restaurant</span>
            <h3><%= @user.name %></h3>
        </div>
        <div class='uh-profile-item'>
            <span class="material-icons">location_on</span>
            <p><a href="http://maps.google.com/maps?q=<%= @user.address_line1 %>"><%= @user.address_line1 %></a></p>
        </div>
        <div class='uh-profile-item'>
            <span class="material-icons">phone</span>
            <p><a href="tel:<%= @user.phone %>"><%= @user.phone %></a></p>
        </div>
        <div class='uh-profile-list'>
          <% if @user.ubereats_link %>
              <a href="<%= @user.ubereats_link %>" target="_blank">
                  <img src="/assets/social/ubereats.svg">
              </a>
          <% end %>
          <% if @user.doordash_link %>
              <a href="<%= @user.doordash_link %>" target="_blank">
                  <img src="/assets/social/doordash.svg">
              </a>
          <% end %>
          <% if @user.grubhub_link %>
              <a href="<%= @user.grubhub_link %>" target="_blank">
                  <img src="/assets/social/grubhub.svg">
              </a>
          <% end %>
        </div>
        <div class='uh-profile-list'>
        <% if @user.facebook_link %>
              <a href="<%= @user.facebook_link %>" target="_blank">
                  <img src="/assets/social/facebook.svg">
              </a>
        <% end %>
        <% if @user.instagram_link %>
            <a href="<%= @user.instagram_link %>" target="_blank">
                <img src="/assets/social/instagram.png">
            </a>
        <% end %>
        </div>
    </div>
</div>
