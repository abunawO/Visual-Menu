<nav id="app-navigation" class='app-navigation'>
<% if logged_in? %>
  <p  class='app-navigation-btn'><span id="app-navigation-btn" class='material-icons'>menu</span></p>
  <ul class='app-navigation-list'>
      <li>
          <span class='material-icons'>dashboard</span>
          <span class='nav-link'><%= link_to "Create Menu Item", root_path %></span>
      </li>
      <li>
          <span class='material-icons'>local_dining</span>
          <span class='nav-link'><%= link_to "Menu", current_user %></span>
      </li>
      <li>
          <span class='material-icons'>account_box</span>
          <span class='nav-link'><%= link_to "Set profile picture", "https://en.gravatar.com/", target: :_blank %></span>
      </li>
       <li>
          <span class='material-icons'>edit</span>
          <span class='nav-link'><%= link_to "Edit profile", info_edit_path(:id => current_user.id), :method => "get" %></span>
      </li>
      <li>
          <span class='material-icons'>exit_to_app</span>
          <span class='nav-link'><%= link_to "Log Out", logout_path, method: "delete" %></span>
      </li>
  </ul>
<% else %>
  <%= link_to "Log in", login_path %>
<% end %>
</nav>

  <script>
    window.onclick = function(event) {
      let modal = document.getElementById('app-navigation')
      let isModal =  document.getElementById('app-navigation-btn') 
    if (event.target == modal || event.target == isModal) {
      modal.classList.add('active')
    } else {
      modal.classList.remove('active')
    }
  }
</script>