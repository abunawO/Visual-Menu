<!-- This is the first page the user sees when they sign in. -->
<% if @user %>
  <% provide(:title, @user.name) %>
  <div class="users-show-menu-page-display">

    <div class="row">

      <%= render 'shared/back_to_top' %>

      <aside class="col-md-4">
        <section>
          <h1>
            <%= gravatar_for @user %>
            <%= @user.name %>
          </h1>
        </section>
      </aside>

      <div class="row" >
        <% if logged_in? %>
          <%= render 'shared/home_btn' %>
        <% else %>
          <%= render :partial => "shared/home_button" %>
        <% end %>
      </div>

      <div class="feed-section">
        <div class="row" style="width: 60%;left: 30%;position: relative;">
          <% if @user.microposts.any? %>

            <div>
              <%= render :partial => "shared/search_option" %>
            </div>

            <div class="category-select">
              <%= form_tag(category_search_path, :method => "get", class: 'navbar-form navbar-left') do %>
                <%= hidden_field_tag :user_id, @user.id %>
                <div class="input-group">
                  <%= select_tag("category[title]", options_from_collection_for_select(@categories, "category", "category", params[:category]), prompt: "Select Category") %>
                  <div class="input-group-btn">
                    <%= button_tag "search", :class => 'material-icons btn-info category-search',:name =>  nil %>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>

        <div class="row">
        <header id="gtco-header" class="gtco-cover gtco-cover-sm" role="banner" data-stellar-background-ratio="0.5">
          <div class="overlay"></div>
          <div class="gtco-container">
            <div class="row">
              <div class="col-md-12 col-md-offset-0 text-center">


                <div class="row row-mt-15em">
                  <div class="col-md-12 mt-text animate-box" data-animate-effect="fadeInUp">
                    <span class="intro-text-small">Powered by <a href="" target="_blank">VIZHO͞OƏLS</a></span>
                    <p>VIZHO͞OƏL menu</p>
                  </div>

                </div>


              </div>
            </div>
          </div>
        </header>
      </div>

        <div class="row col-md-8">
          <% if @user.microposts.any? %>
            <!--<h3>Menu Items (<%= @user.microposts.count %>)</h3>-->
            <ol class="microposts">
              <%= render @microposts %>
            </ol>
            <%= will_paginate @microposts %>
          <% end %>
        </div>
      </div>

    </div>
  </div>
<% end %>
