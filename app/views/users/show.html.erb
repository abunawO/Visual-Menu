<%# <body style="padding-top: 0;"> %>
<!-- This is the first page the user sees when they sign in. -->
<% if @user %>
  <% provide(:title, @user.name) %>
  <div class='user-home'>
    <%= render :partial => "shared/static/user/header", :locals => {
      :settings => false
    } %>
  </div>
  <div>
    <div class="row">
      <%= render 'shared/back_to_top' %>
    </div>
    <div class="config-c row">
        <%= render :partial => "shared/search_option" %>
        <%= render :partial => "shared/category_select_search" %>
    </div>
    <div class="row">
      <div class="menu-display-section">

        <% if @specials.present? %>
                <div class='microposts-c'>
                  <button class='microposts-title special'>
                    <p><%= @specials.first.category %></p>
                    <span class='material-icons'>add</span>
                  </button>
                  <ol class="microposts active horizontal">
                    <%= render @specials %>
                  </ol>
                </div>
          <% end %>

        <%= render :partial=> "shared/micropost_list_display" %>
        <%= render :partial=> "shared/micropost_modal" %>
        <%= render :partial=> "shared/search_fab" %>
      </div>
    </div>

  </div>
 </div>

<% else %>
  <%= render :partial=> "shared/user_not_found_error" %>
<% end %>
<%# render 'layouts/footer' %>

<%# </body> %>