<!--The status feed partial.-->
<div class="main-page-bk">
  <%= render :partial => "shared/back_button" %>
  <% if @feed_items.any? %>
    <div class="category-search-main-div">
      <%= form_tag(search_page_path, :method => "get", class: 'navbar-form navbar-left') do %>
        <%= hidden_field_tag :user_id, @user.id %>
       <div style="position: relative;">
        <div class="input-group">
          <%= search_field_tag :search, params[:search], placeholder: "Enter title", class: "form-control" %>
          <%= hidden_field_tag :category, @category %>
          <div class="input-group-btn">
            <%= button_tag "", :class => 'btn btn-info glyphicon glyphicon-search',:name => nil%>
          </div>
        </div>
      </div>
      <% end %>
    </div>

    <div>
      <ol class="microposts">
        <%= render @feed_items %>
      </ol>
      <%= will_paginate @feed_items %>
    </div>
<% else %>
   <%= image_tag('search-not-found.png', class: 'search-not-found')  %>
<% end %>
</div>
