<!--Adding a status feed to the Home page.-->
<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="stats"> <!--Adding follower stats to the Home page.-->
        <%= render 'shared/stats' %>
      </section>
      <section class="micropost_form">
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>Post Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1>Welcome to the Post App</h1>

    <h2>
      Post something interesting....
      <!--<a href="http://www.railstutorial.org/">Posts and Coments</a>-->
    </h2>

    <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
  </div>

  <%= link_to image_tag("post.jpg", alt: "Rails logo"),
              'http://rubyonrails.org/' %>
<% end %>