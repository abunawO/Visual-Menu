
<!--The representation of a menu item/micropost partial.-->
<!--Displayed in the feed.html.erb partial.-->
<li class='micropost_'>
  <%= link_to micropost_show_path(:micropost_id => micropost.id), class: 'micropost-link' do %>
    <%# image_tag micropost.picture.url, class: "micropost-image" %>
    <%= image_tag "/assets/landing/img_1.jpg", class: "micropost-image" %>
    <div class='micropost-details'>
      <p class='micropost-title'> <%= micropost.content %> </p>
      <!-- <p class="mp-description"> <%= micropost.description %> </p> -->
      <p class='micropost-price'> <%= number_to_currency(micropost.price, :unit => "$")%> </p>
    </div>
  <% end %>
  
  <% if current_user?(micropost.user) %>
    <div class='micropost-settings'>
      <!--Posted <%= time_ago_in_words(micropost.created_at) %> ago. --->
      <%= link_to "Delete", micropost, method: :delete, data: { confirm: "Are you sure?" } %> |
      <%= link_to "Edit", micropost_edit_path(:micropost_id => micropost.id, :edit_clicked => true) %>
    <div>
  <% end %>
</li>


