<!--Adding a delete link to the micropost partial.-->
<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: 50), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content micropost-item" style="font-size: 20px;">
    <div class="well well-alt-title">
      <%= micropost.content %> | <%= number_to_currency(micropost.price, :unit => "$")%>
    </div>

      <%= link_to image_tag(micropost.picture.url), micropost_show_path(:micropost_id => micropost.id) %>

    <div class="well well-alt">
      <span class="content micropost-item">
          <p style="color: #333; font-size: 14px;font-family: 'Raleway', sans-serif;">
            <%= micropost.description %>
          </p>
      </span>
    </div>
  </span>
  <span class="timestamp">
    <% if current_user?(micropost.user) %>
      Posted <%= time_ago_in_words(micropost.created_at) %> ago.
      <%= link_to "Delete", micropost, method: :delete,
                                       data: { confirm: "Are you sure?" } %> |
      <%= link_to "Edit", micropost_edit_path(:micropost_id => micropost.id, :edit_clicked => true) %>
    <% end %>
  </span>
</li>
